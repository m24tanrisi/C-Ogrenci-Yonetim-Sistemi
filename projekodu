#include <stdio.h>
#include <string.h>

struct Ogrenci {
    int no;
    char ad[30];
    float notu;
};

void ogrenciEkle(struct Ogrenci ogr[], int *sayac) {
    printf("Ogrenci numarasi: ");
    scanf("%d", &ogr[*sayac].no);

    printf("Ogrenci adi: ");
    scanf("%s", ogr[*sayac].ad);

    printf("Ogrenci notu: ");
    scanf("%f", &ogr[*sayac].notu);

    (*sayac)++;
}

void ogrenciListele(struct Ogrenci ogr[], int sayac) {
    if (sayac == 0) {
        printf("Henuz ogrenci yok.\n");
        return;
    }

    for (int i = 0; i < sayac; i++) {
        printf("\nOgrenci %d\n", i + 1);
        printf("No  : %d\n", ogr[i].no);
        printf("Ad  : %s\n", ogr[i].ad);
        printf("Not : %.2f\n", ogr[i].notu);
    }
}

int main() {
    struct Ogrenci ogrenciler[100];
    int sayac = 0;
    int secim;

    while (1) {
        printf("\n1- Ogrenci Ekle");
        printf("\n2- Ogrencileri Listele");
        printf("\n3- Cikis");
        printf("\nSeciminiz: ");
        scanf("%d", &secim);

        if (secim == 1) {
            ogrenciEkle(ogrenciler, &sayac);
        } 
        else if (secim == 2) {
            ogrenciListele(ogrenciler, sayac);
        } 
        else if (secim == 3) {
            printf("Programdan cikiliyor...\n");
            break;
        } 
        else {
            printf("Hatali secim!\n");
        }
    }

    return 0;
}
